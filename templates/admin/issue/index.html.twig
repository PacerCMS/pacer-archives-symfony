{% extends 'base_admin.html.twig' %}

{% block title %}Issues - {{ parent() }}{% endblock %}

{% block body %}
<div class="container">
    <h1>Issues</h1>

    <table class="table">
        <thead>
            <tr>
                <th>ID</th>
                <th>Date</th>
                <th>Number</th>
                <th>Pages</th>
                <th>Archive Key</th>
                <th>Notes</th>
                <th>UT Martin Digital Archive</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
        {% for issue in issues %}
            <tr>
                <td>{{ issue.id }}</td>
                <td>{{ issue.issueDate ? issue.issueDate|date('n/j/Y') : '' }}</td>
                <td>{{ issue.issueNumber }}</td>
                <td>{{ issue.pageCount }}</td>
                <td>{{ issue.archiveKey }}</td>
                <td>{{ issue.archiveNotes }}</td>
                <td>{{ issue.utmDigitalArchiveUrl }}</td>
                <td>
                    <a href="{{ path('issue_show', {'id': issue.id}) }}"><i class="fas fa-eye fa-fw"></i></a>
                    <a href="{{ path('issue_edit', {'id': issue.id}) }}"><i class="fas fa-edit fa-fw"></i></a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="8">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('issue_new') }}"><i class="fas fa-plus fa-fw"></i></a>
</div>
{% endblock %}

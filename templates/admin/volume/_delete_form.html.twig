<div class="my-3">
  <form method="post" action="{{ path('admin_volume_delete', {'id': volume.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ volume.id) }}">
    <button class="btn btn-danger"><i class="fas fa-trash"></i> Delete</button>
  </form>
</div>

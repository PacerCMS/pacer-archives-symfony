{% extends 'admin/base.html.twig' %}

{% block title %}Volume index{% endblock %}

{% block body %}
    <h1>Volume index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>VolumeNumber</th>
                <th>VolumeStartDate</th>
                <th>VolumeEndDate</th>
                <th>NameplateKey</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for volume in volumes %}
            <tr>
                <td>{{ volume.id }}</td>
                <td>{{ volume.volumeNumber }}</td>
                <td>{{ volume.volumeStartDate ? volume.volumeStartDate|date('Y-m-d') : '' }}</td>
                <td>{{ volume.volumeEndDate ? volume.volumeEndDate|date('Y-m-d') : '' }}</td>
                <td>{{ volume.nameplateKey }}</td>
                <td>
                    <a href="{{ path('admin_volume_show', {'id': volume.id}) }}">show</a>
                    <a href="{{ path('admin_volume_edit', {'id': volume.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('admin_volume_new') }}">Create new</a>
{% endblock %}

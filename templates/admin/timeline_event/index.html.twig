{% extends 'base_admin.html.twig' %}

{% block title %}Timeline Events - {{ parent() }}{% endblock %}

{% block body %}
<div class="container">
  {% embed 'admin/_page_header.html.twig' %}
  {% block page_header_title %}Timeline Events{% endblock %}
  {% block page_header_buttons %}
  <a href="{{ path('timeline_event_new') }}"><i class="fas fa-plus fa-fw"></i></a>
  {% endblock %}
  {% endembed %}

  <div class="card mb-3">
    <div class="card-body">
      <div class="table-responsive">
        <table class="table" id="timelineEventTable">
          <thead>
            <tr>
                <th>Headline</th>
                <th>Display Date</th>
                <th>Start Date</th>
                <th>End Date</th>
                <th data-sortable="false" class="col-actions"></th>
            </tr>
          </thead>
          <tbody>
            {% for timeline_event in timeline_events %}
            <tr>
                <td>{{ timeline_event.headline }}</td>
                <td>{{ timeline_event.displayDate }}</td>
                <td data-sort="{{ timeline_event.startDate ? timeline_event.startDate|date('Y-m-d') : '' }}">{{ timeline_event.startDate ? timeline_event.startDate|date('n/j/Y') : '' }}</td>
                <td data-sort="{{ timeline_event.endDate ? timeline_event.endDate|date('Y-m-d') : '' }}">{{ timeline_event.endDate ? timeline_event.endDate|date('n/j/Y') : '' }}</td>
                <td>
                    <a href="{{ path('timeline_event_show', {'id': timeline_event.id}) }}"><i class="fas fa-eye fa-fw"></i></a>
                    <a href="{{ path('timeline_event_edit', {'id': timeline_event.id}) }}"><i class="fas fa-edit fa-fw"></i></a>
                </td>
            </tr>
            {% else %}
            <tr>
                <td colspan="8">no records found</td>
            </tr>
            {% endfor %}
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
{% endblock %}

{% block pagejs %}
{{ parent() }}
<script>
$('#timelineEventTable').DataTable()
</script>
{% endblock %}

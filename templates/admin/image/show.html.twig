{% extends 'admin/base.html.twig' %}

{% block title %}Image{% endblock %}

{% block body %}
    <div class="float-right">
        <a href="{{ path('admin_image_edit', {'id': image.id}) }}" class="btn btn-secondary"><i class="fas fa-pencil-alt"></i> Edit</a>
    </div>
    <h1>Image</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>ID</th>
                <td>{{ image.id }}</td>
            </tr>
            <tr>
                <th>Caption</th>
                <td>{{ image.caption|markdown }}</td>
            </tr>
            <tr>
                <th>Credit</th>
                <td>{{ image.credit }}</td>
            </tr>
            <tr>
                <th>Path</th>
                <td>{{ image.path }}</td>
            </tr>
        </tbody>
    </table>

    {{ include('admin/image/_delete_form.html.twig') }}
{% endblock %}

{% extends 'base_admin.html.twig' %}

{% block title %}{{ image }} - {{ parent() }}{% endblock %}

{% block body %}
<div class="container">
  {% embed 'admin/_page_header.html.twig' %}
  {% block page_header_title %}{{ image }}{% endblock %}
  {% block page_header_buttons %}
  <a href="{{ path('image_index') }}"><i class="fas fa-list fa-fw"></i></a>
  <a href="{{ path('image_edit', {'id': image.id}) }}"><i class="fas fa-edit fa-fw"></i></a>
  {% endblock %}
  {% endembed %}
  <div class="card mb-3">
    <div class="card-body">
      <p><a href="{{ path('s3_proxy', {id: image.id}) }}" class="btn btn-primary"><i class="fas fa-image fa-fw"></i> Open {{ image }}</a></p>
      <table class="table">
        <tbody>
            <tr>
                <th>Caption</th>
                <td>{{ image.caption }}</td>
            </tr>
            <tr>
                <th>Credit</th>
                <td>{{ image.credit }}</td>
            </tr>
            <tr>
                <th>Path</th>
                <td><tt>{{ image.path }}</tt></td>
            </tr>
        </tbody>
      </table>
    </div>
  </div>

  {{ include('admin/image/_delete_form.html.twig') }}
</div>
{% endblock %}

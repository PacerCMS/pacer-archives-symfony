{% extends 'base_admin.html.twig' %}

{% block title %}Images - {{ parent() }}{% endblock %}

{% block body %}
<div class="container">
    <h1>Images</h1>

    <table class="table">
        <thead>
            <tr>
                <th>ID</th>
                <th>Caption</th>
                <th>Credit</th>
                <th>Path</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
        {% for image in images %}
            <tr>
                <td>{{ image.id }}</td>
                <td>{{ image.caption }}</td>
                <td>{{ image.credit }}</td>
                <td>{{ image.path }}</td>
                <td>
                    <a href="{{ path('image_show', {'id': image.id}) }}"><i class="fas fa-eye fa-fw"></i></a>
                    <a href="{{ path('image_edit', {'id': image.id}) }}"><i class="fas fa-edit fa-fw"></i></a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('image_new') }}"><i class="fas fa-plus fa-fw"></i></a>
</div>
{% endblock %}
